<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.Meetstranger">

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission
        android:name="android.permission.CAPTURE_VIDEO_OUTPUT"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/applogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/applogo_round"
        android:supportsRtl="false"
        tools:ignore="HardcodedDebugMode"
        tools:replace="android:supportsRtl">
        <activity
            android:name="com.example.Meetstranger.ReportActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="com.example.Meetstranger.ConnectActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="appr.tc"
                    android:scheme="https" />
                <data
                    android:host="appr.tc"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.Meetstranger.SettingsActivity"
            android:label="@string/settings_name" />
        <activity
            android:name="com.example.Meetstranger.CallActivity"
            android:configChanges="orientation|smallestScreenSize|screenSize|screenLayout"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/CallActivityTheme" />
        <activity
            android:name="com.example.Meetstranger.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.Meetstranger.RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="com.example.Meetstranger.MainActivityMale"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.RandomTalk" />
        <activity
            android:name="com.example.Meetstranger.MainActivityFemale"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.RandomTalk" />
        <activity
            android:name="com.example.Meetstranger.profile.ProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.RandomTalk" />
        <activity
            android:name="com.example.Meetstranger.profile.OthersProfile"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="com.example.Meetstranger.profile.ImageView"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="com.example.Meetstranger.MoreActivity"
            android:label="Random Talk and Global Chat"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.RandomTalk" />
        <activity
            android:name="com.example.Meetstranger.ChatRoom.MainActivity"
            android:label="Random Talk and Global Chat"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.RandomTalk" />
        <activity
            android:name="com.example.Meetstranger.ChatRoom.ChatRoom"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.RandomTalk" />
        <activity
            android:name="com.example.Meetstranger.GlobalChat.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.RandomTalk1" />
        <activity
            android:name="com.example.Meetstranger.GlobalChat.MessageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.RandomTalk1" />
        <activity
            android:name="com.example.Meetstranger.GlobalChat.FemaleUsers"
            android:label="Female User List"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.RandomTalk" />
        <activity
            android:name="com.example.Meetstranger.grammar.VocabularyActivity"
            android:label="Vocabulary and Grammar"
            android:parentActivityName="com.example.Meetstranger.MoreActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.RandomTalk" />
        <activity
            android:name="com.example.Meetstranger.grammar.DictionaryActivity"
            android:label="Vocabulary and Grammar"
            android:parentActivityName="com.example.Meetstranger.grammar.VocabularyActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.RandomTalk" />
        <activity
            android:name="com.example.Meetstranger.grammar.ListActivity"
            android:label="Vocabulary and Grammar"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.RandomTalk" />
        <activity
            android:name="com.example.Meetstranger.advanced.AdvancedFeatures"
            android:screenOrientation="portrait"
            android:label="Random Talk and Global Chat"
            android:theme="@style/Theme.RandomTalk"/>

        <receiver android:name="com.example.Meetstranger.ReminderBroadcast" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5077816560597594~3253252050" />
    </application>

</manifest>